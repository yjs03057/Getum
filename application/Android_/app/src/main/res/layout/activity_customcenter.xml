<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <ImageButton
        android:id="@+id/close_btn"
        android:layout_width="30dp"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/close" />

    <TextView
        android:id="@+id/infotitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="고객센터"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#000000"
        app:layout_constraintBottom_toTopOf="@+id/infotitle1"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="140dp" />

    <TextView
        android:id="@+id/service_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="15dp"
        android:text="상담하기"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/service_info"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="고객센터 상담시간"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="161dp"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평일 10:00 ~ 18:00"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="161dp"
        android:textSize="22dp"
        style="bold"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평일 10:00 ~ 18:00"
        android:textColor="#808080"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="161dp"
        android:textSize="14dp"
        style="bold"/>

    <Button
    android:id="@+id/call"
    android:text="전화문의하기"
    android:textSize="16dp" android:layout_marginTop="13dp"
    android:textColor="#ffffff"
    android:textStyle="bold"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_width ="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_button"
    tools:layout_editor_absoluteX="159dp"
    tools:layout_editor_absoluteY="277dp" app:layout_constraintTop_toBottomOf="@id/textView3"

        />

    <Button
        android:id="@+id/call2"
        android:text="카카오톡문의하기"
        app:layout_constraintTop_toBottomOf="@id/call"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width ="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/call_button"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="277dp" />



</androidx.constraintlayout.widget.ConstraintLayout>